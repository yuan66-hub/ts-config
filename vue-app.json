{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue Application",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "noEmit": true,
    "noImplicitAny": false,
    "jsxImportSource": "vue",
    "verbatimModuleSyntax": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  }
}